<%- include("header") -%>

<div class="box">
    <h1 id="heading"><%= listTitle %></h1>
</div>

<div class="box">
    <% for(var i=0;i<newItem.length;i++){ %>
    <div class="item">
        <input type="checkbox">
        <%  var listItem = newItem[i]; %>
        <p><%= listItem %></p>
    </div>
    <% } %>
    <div class="item">
        <form action="/" method="POST">
            <input type="text" name="newItem" placeholder="Enter task" autocomplete="off" required>
            <button type="submit" name="list" class="button" value="<%= listTitle %>">+</button>
        </form>
    </div>
</div>
<%- include("footer") -%>
